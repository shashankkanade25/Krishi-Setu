<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | कृषी-सेतू</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Hind:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/auth.css">
    <style>
        .brand-title {
            font-family: 'Hind', 'Noto Sans Devanagari', sans-serif;
            font-size: 3.5rem !important;
            font-weight: 700 !important;
            color: #1a1a1a !important;
            margin-bottom: 0.3rem;
            letter-spacing: 0;
            line-height: 1.2;
        }
    </style>
</head>
<body>

<div class="auth-container">

    <!-- LEFT SIDE - CART IMAGE WITH YELLOW BACKGROUND -->
    <div class="auth-image">
        <img src="/images/cart.jpg" alt="Fresh Farm Produce">
    </div>

    <!-- RIGHT SIDE - LOGIN FORM -->
    <div class="auth-form">
        <div class="brand-logo">
            <img src="/images/krishi-setu-logo.png" alt="कृषी-सेतू" class="brand-logo-img">
            <p class="brand-tagline">A BRIDGE BETWEEN FARMERS AND CUSTOMERS</p>
        </div>

        <div class="role-selector">
            <button type="button" class="role-btn" data-role="farmer" onclick="selectRole('farmer')">
                <img src="/icons/icons8-farmer-80.png" alt="Farmer" style="width: 20px; height: 20px;"> Farmer
            </button>
            <button type="button" class="role-btn active" data-role="customer" onclick="selectRole('customer')">
                <img src="/icons/icons8-cart-50.png" alt="Customer" style="width: 20px; height: 20px;"> Customer
            </button>
        </div>

        <div class="welcome-text">
            <h2>Welcome Back! <img src="/icons/icons8-tree-26.png" alt="" style="width: 24px; height: 24px; vertical-align: middle;"></h2>
            <p>Sign in to continue your journey</p>
        </div>

        <form id="loginForm">
            <div class="input-group">
                <label for="email">Email Address</label>
                <div class="input-wrapper">
                    <span class="input-icon"><img src="/icons/icons8-email-50.png" alt="Email" style="width: 20px; height: 20px;"></span>
                    <input type="email" id="email" name="email" required placeholder="your.email@example.com">
                </div>
            </div>

            <div class="input-group">
                <label for="password">Password</label>
                <div class="input-wrapper">
                    <span class="input-icon"><img src="/icons/icons8-lock-50.png" alt="Lock" style="width: 20px; height: 20px;"></span>
                    <input type="password" id="password" name="password" required placeholder="Enter your password">
                    <span class="password-toggle" onclick="togglePassword('password')" id="toggleIcon-password"><img src="/icons/icons8-eye-50.png" alt="Show" style="width: 20px; height: 20px;"></span>
                </div>
            </div>

            <input type="hidden" id="role" name="role" value="customer">
            <button type="submit" class="btn">Sign In →</button>
        </form>

        <p class="switch">
            New to कृषी-सेतू? 
            <a href="/register">Create Account</a>
        </p>
    </div>

</div>

<!-- Modal for role mismatch -->
<div id="roleModal" class="modal">
    <div class="modal-content">
        <div class="modal-icon"><i class="fas fa-exclamation-triangle"></i></div>
        <h3 class="modal-title">Login Error</h3>
        <p class="modal-message" id="modalMessage"></p>
        <button class="modal-btn" onclick="closeModal()">Got it</button>
    </div>
</div>

<script>
    // Check URL parameter for role
    const urlParams = new URLSearchParams(window.location.search);
    const roleParam = urlParams.get('role');
    
    if (roleParam && (roleParam === 'customer' || roleParam === 'farmer')) {
        selectRole(roleParam);
    }
    
    function togglePassword(id) {
        const input = document.getElementById(id);
        const toggle = document.getElementById('toggleIcon-' + id).querySelector('img');
        if (input.type === 'password') {
            input.type = 'text';
            toggle.src = '/icons/icons8-blind-50.png';
            toggle.alt = 'Hide';
        } else {
            input.type = 'password';
            toggle.src = '/icons/icons8-eye-50.png';
            toggle.alt = 'Show';
        }
    }
    
    function selectRole(role) {
        // Update hidden input
        document.getElementById('role').value = role;
        
        // Update button styles
        document.querySelectorAll('.role-btn').forEach(btn => {
            btn.classList.remove('active');
        });
        document.querySelector(`[data-role="${role}"]`).classList.add('active');
    }
    
    // Cart Animation on Form Submit
    const cartSvgObj = document.getElementById('cart-svg');
    const loginForm = document.getElementById('loginForm');
    
    // Handle form submission
    if (loginForm) {
        loginForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = {
                email: formData.get('email'),
                password: formData.get('password'),
                role: formData.get('role')
            };
            
            console.log('Submitting login:', data);
            
            try {
                const response = await fetch('/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                console.log('Response status:', response.status);
                console.log('Response ok:', response.ok);
                
                // If successful (redirect happens), animate and follow it
                if (response.redirected) {
                    console.log('Redirecting to:', response.url);
                    animateCart();
                    setTimeout(() => {
                        window.location.href = response.url;
                    }, 500);
                    return;
                }
                
                // Try to parse as JSON for error handling
                try {
                    const result = await response.json();
                    console.log('JSON result:', result);
                    
                    if (result.error === 'role_mismatch') {
                        // Show modal with error message
                        console.log('Showing modal for role mismatch');
                        showModal(result.message, result.correctRole);
                    } else if (result.error === 'invalid_credentials') {
                        // Show modal for invalid credentials
                        showModal(result.message);
                    } else {
                        showModal(result.message || 'Login failed. Please try again.');
                    }
                } catch (jsonError) {
                    // If not JSON, try text
                    const text = await response.text();
                    console.log('Text result:', text);
                    showModal(text || 'Login failed. Please try again.');
                }
            } catch (error) {
                console.error('Login error:', error);
                showModal('An error occurred. Please try again.');
            }
        });
    }
    
    function showModal(message, correctRole) {
        document.getElementById('modalMessage').textContent = message;
        document.getElementById('roleModal').style.display = 'flex';
        
        // Auto-switch to correct role only for role mismatch
        if (correctRole) {
            setTimeout(() => {
                selectRole(correctRole);
            }, 100);
        }
    }

    function closeModal() {
        document.getElementById('roleModal').style.display = 'none';
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
        const modal = document.getElementById('roleModal');
        if (event.target === modal) {
            closeModal();
        }
    }
    
    function animateCart() {
        if (!cartSvgObj) return;
        
        // Access SVG document
        const svgDoc = cartSvgObj.contentDocument;
        if (!svgDoc) return;
        
        const cartGroup = svgDoc.getElementById('cart');
        const wheelLeft = svgDoc.getElementById('wheel-left');
        const wheelRight = svgDoc.getElementById('wheel-right');
        
        if (cartGroup && wheelLeft && wheelRight) {
            // Animate cart body - move 250px to the right
            cartGroup.style.transition = 'transform 2.5s cubic-bezier(0.4, 0, 0.2, 1)';
            cartGroup.style.transform = 'translateX(250px)';
            
            // Animate left wheel - rotate with realistic motion
            wheelLeft.style.transition = 'transform 2.5s linear';
            wheelLeft.style.transformOrigin = '300px 520px';
            wheelLeft.style.transform = 'rotate(720deg)';
            
            // Animate right wheel - rotate with realistic motion
            wheelRight.style.transition = 'transform 2.5s linear';
            wheelRight.style.transformOrigin = '900px 520px';
            wheelRight.style.transform = 'rotate(720deg)';
        }
    }
</script>

<style>
    .role-selector {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.5rem;
        justify-content: center;
    }
    
    .role-btn {
        padding: 0.8rem 1.5rem;
        border: 2px solid #e0e0e0;
        background: #fff;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .role-btn:hover {
        border-color: #4CAF50;
        background: #f8fff8;
    }
    
    .role-btn.active {
        border-color: #4CAF50;
        background: #4CAF50;
        color: white;
    }

    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        animation: fadeIn 0.3s ease;
    }

    .modal-content {
        background: white;
        padding: 2rem;
        border-radius: 16px;
        text-align: center;
        max-width: 400px;
        width: 90%;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        animation: slideIn 0.3s ease;
    }

    .modal-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .modal-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 1rem;
    }

    .modal-message {
        font-size: 1rem;
        color: #666;
        margin-bottom: 1.5rem;
        line-height: 1.5;
    }

    .modal-btn {
        background: #4CAF50;
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .modal-btn:hover {
        background: #45a049;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @keyframes slideIn {
        from { 
            transform: translateY(-50px);
            opacity: 0;
        }
        to { 
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>

</body>
</html>
