<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings - कृषी-सेतू</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Devanagari:wght@400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/settings.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <section class="settings-section">
        <div class="container">
            <div class="settings-header">
                <h1>Settings</h1>
                <p>Manage your preferences and account settings</p>
            </div>

            <div class="settings-container">
                <!-- Settings Categories -->
                <div class="settings-sidebar">
                    <button class="setting-category active" onclick="showCategory('notifications')">
                        <i class="fas fa-bell"></i>
                        <span>Notifications</span>
                    </button>
                    <button class="setting-category" onclick="showCategory('privacy')">
                        <i class="fas fa-shield-alt"></i>
                        <span>Privacy</span>
                    </button>
                    <button class="setting-category" onclick="showCategory('language')">
                        <i class="fas fa-language"></i>
                        <span>Language & Region</span>
                    </button>
                    <button class="setting-category" onclick="showCategory('payment')">
                        <i class="fas fa-credit-card"></i>
                        <span>Payment Methods</span>
                    </button>
                    <button class="setting-category" onclick="showCategory('appearance')">
                        <i class="fas fa-palette"></i>
                        <span>Appearance</span>
                    </button>
                    <button class="setting-category" onclick="showCategory('account')">
                        <i class="fas fa-user-cog"></i>
                        <span>Account</span>
                    </button>
                </div>

                <!-- Settings Content -->
                <div class="settings-content">
                    <!-- Notifications Settings -->
                    <div id="notifications-category" class="category-content active">
                        <h2><i class="fas fa-bell"></i> Notification Preferences</h2>
                        
                        <div class="setting-group">
                            <div class="setting-item">
                                <div class="setting-info">
                                    <h3>Order Updates</h3>
                                    <p>Get notified about your order status and delivery updates</p>
                                </div>
                                <label class="toggle-switch">
                                    <input type="checkbox" id="orderNotif" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>

                            <div class="setting-item">
                                <div class="setting-info">
                                    <h3>Promotional Emails</h3>
                                    <p>Receive special offers, discounts, and promotions</p>
                                </div>
                                <label class="toggle-switch">
                                    <input type="checkbox" id="promoNotif">
                                    <span class="slider"></span>
                                </label>
                            </div>

                            <div class="setting-item">
                                <div class="setting-info">
                                    <h3>New Products</h3>
                                    <p>Get notified when farmers add new products</p>
                                </div>
                                <label class="toggle-switch">
                                    <input type="checkbox" id="newProductNotif" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>

                            <div class="setting-item">
                                <div class="setting-info">
                                    <h3>SMS Notifications</h3>
                                    <p>Receive SMS alerts for important updates</p>
                                </div>
                                <label class="toggle-switch">
                                    <input type="checkbox" id="smsNotif">
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Privacy Settings -->
                    <div id="privacy-category" class="category-content">
                        <h2><i class="fas fa-shield-alt"></i> Privacy & Security</h2>
                        
                        <div class="setting-group">
                            <div class="setting-item">
                                <div class="setting-info">
                                    <h3>Profile Visibility</h3>
                                    <p>Make your profile visible to other users</p>
                                </div>
                                <label class="toggle-switch">
                                    <input type="checkbox" id="profileVisible" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>

                            <div class="setting-item">
                                <div class="setting-info">
                                    <h3>Show Purchase History</h3>
                                    <p>Allow farmers to see your purchase history</p>
                                </div>
                                <label class="toggle-switch">
                                    <input type="checkbox" id="showHistory">
                                    <span class="slider"></span>
                                </label>
                            </div>

                            <div class="setting-item">
                                <div class="setting-info">
                                    <h3>Two-Factor Authentication</h3>
                                    <p>Add an extra layer of security to your account</p>
                                </div>
                                <label class="toggle-switch">
                                    <input type="checkbox" id="twoFactor">
                                    <span class="slider"></span>
                                </label>
                            </div>

                            <div class="setting-item">
                                <div class="setting-info">
                                    <h3>Data Sharing</h3>
                                    <p>Share anonymous data to help improve our services</p>
                                </div>
                                <label class="toggle-switch">
                                    <input type="checkbox" id="dataSharing">
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>

                        <div class="setting-group">
                            <button class="btn-action-secondary">
                                <i class="fas fa-download"></i> Download My Data
                            </button>
                            <button class="btn-action-secondary">
                                <i class="fas fa-history"></i> View Login History
                            </button>
                        </div>
                    </div>

                    <!-- Language & Region Settings -->
                    <div id="language-category" class="category-content">
                        <h2><i class="fas fa-language"></i> Language & Region</h2>
                        
                        <div class="setting-group">
                            <div class="form-group">
                                <label><i class="fas fa-globe"></i> Language</label>
                                <select id="language" class="form-select">
                                    <option value="en">English</option>
                                    <option value="hi">हिंदी (Hindi)</option>
                                    <option value="mr">मराठी (Marathi)</option>
                                    <option value="ta">தமிழ் (Tamil)</option>
                                    <option value="te">తెలుగు (Telugu)</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label><i class="fas fa-map-marker-alt"></i> Region</label>
                                <select id="region" class="form-select">
                                    <option value="in">India</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label><i class="fas fa-clock"></i> Timezone</label>
                                <select id="timezone" class="form-select">
                                    <option value="IST">IST (Indian Standard Time)</option>
                                    <option value="UTC">UTC</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label><i class="fas fa-rupee-sign"></i> Currency</label>
                                <select id="currency" class="form-select">
                                    <option value="INR">INR (₹)</option>
                                    <option value="USD">USD ($)</option>
                                </select>
                            </div>
                        </div>

                        <button class="btn-action-primary">
                            <i class="fas fa-save"></i> Save Preferences
                        </button>
                    </div>

                    <!-- Payment Methods Settings -->
                    <div id="payment-category" class="category-content">
                        <h2><i class="fas fa-credit-card"></i> Payment Methods</h2>
                        
                        <div class="payment-methods">
                            <div class="payment-card">
                                <div class="payment-icon">
                                    <i class="fas fa-money-bill-wave"></i>
                                </div>
                                <div class="payment-info">
                                    <h3>Cash on Delivery</h3>
                                    <p>Pay when you receive your order</p>
                                    <span class="badge-default">Default</span>
                                </div>
                                <div class="payment-status">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                            </div>

                            <div class="payment-card">
                                <div class="payment-icon">
                                    <i class="fas fa-university"></i>
                                </div>
                                <div class="payment-info">
                                    <h3>UPI Payment</h3>
                                    <p>Quick and secure UPI payments</p>
                                </div>
                                <button class="btn-add">+ Add UPI</button>
                            </div>

                            <div class="payment-card">
                                <div class="payment-icon">
                                    <i class="fas fa-credit-card"></i>
                                </div>
                                <div class="payment-info">
                                    <h3>Credit/Debit Card</h3>
                                    <p>Visa, Mastercard, Rupay accepted</p>
                                </div>
                                <button class="btn-add">+ Add Card</button>
                            </div>
                        </div>
                    </div>

                    <!-- Appearance Settings -->
                    <div id="appearance-category" class="category-content">
                        <h2><i class="fas fa-palette"></i> Appearance</h2>
                        
                        <div class="setting-group">
                            <div class="form-group">
                                <label><i class="fas fa-moon"></i> Theme</label>
                                <div class="theme-options">
                                    <div class="theme-card active">
                                        <i class="fas fa-sun"></i>
                                        <span>Light</span>
                                    </div>
                                    <div class="theme-card">
                                        <i class="fas fa-moon"></i>
                                        <span>Dark</span>
                                    </div>
                                    <div class="theme-card">
                                        <i class="fas fa-adjust"></i>
                                        <span>Auto</span>
                                    </div>
                                </div>
                            </div>

                            <div class="setting-item">
                                <div class="setting-info">
                                    <h3>Compact View</h3>
                                    <p>Display more content on the screen</p>
                                </div>
                                <label class="toggle-switch">
                                    <input type="checkbox" id="compactView">
                                    <span class="slider"></span>
                                </label>
                            </div>

                            <div class="setting-item">
                                <div class="setting-info">
                                    <h3>Animations</h3>
                                    <p>Enable smooth animations and transitions</p>
                                </div>
                                <label class="toggle-switch">
                                    <input type="checkbox" id="animations" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Account Settings -->
                    <div id="account-category" class="category-content">
                        <h2><i class="fas fa-user-cog"></i> Account Management</h2>
                        
                        <div class="setting-group">
                            <div class="account-info-card">
                                <h3>Account Information</h3>
                                <div class="info-item">
                                    <span class="info-label">Account Type:</span>
                                    <span class="info-value"><%= user.role === 'farmer' ? 'Farmer' : 'Customer' %></span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">Member Since:</span>
                                    <span class="info-value">January 2026</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">Email:</span>
                                    <span class="info-value"><%= user.email %></span>
                                </div>
                            </div>
                        </div>

                        <div class="setting-group">
                            <h3 class="group-title">Account Actions</h3>
                            <button class="btn-action-secondary">
                                <i class="fas fa-sync"></i> Sync Account Data
                            </button>
                            <button class="btn-action-secondary">
                                <i class="fas fa-file-export"></i> Export Account Data
                            </button>
                        </div>

                        <div class="setting-group danger-zone">
                            <h3 class="group-title">Danger Zone</h3>
                            <button class="btn-danger" onclick="confirmDeactivate()">
                                <i class="fas fa-pause-circle"></i> Deactivate Account
                            </button>
                            <button class="btn-danger" onclick="confirmDelete()">
                                <i class="fas fa-trash-alt"></i> Delete Account
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script>
        function showCategory(categoryName) {
            // Remove active class from all categories
            document.querySelectorAll('.setting-category').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.category-content').forEach(content => content.classList.remove('active'));
            
            // Add active class to selected category
            event.target.closest('.setting-category').classList.add('active');
            document.getElementById(`${categoryName}-category`).classList.add('active');
        }

        // Save settings to server
        function saveSettings() {
            const settings = {
                notifications: {
                    orders: document.getElementById('orderNotif').checked,
                    promotional: document.getElementById('promoNotif').checked,
                    newProducts: document.getElementById('newProductNotif').checked,
                    sms: document.getElementById('smsNotif').checked
                },
                privacy: {
                    profileVisible: document.getElementById('profileVisible').checked,
                    showHistory: document.getElementById('showHistory').checked,
                    twoFactor: document.getElementById('twoFactor').checked,
                    dataSharing: document.getElementById('dataSharing').checked
                },
                language: document.getElementById('language').value,
                region: document.getElementById('region').value,
                timezone: document.getElementById('timezone').value,
                currency: document.getElementById('currency').value
            };

            console.log('Settings to save:', settings);
            // Here you would send this to the server
        }

        // Auto-save on toggle change
        document.querySelectorAll('.toggle-switch input').forEach(toggle => {
            toggle.addEventListener('change', saveSettings);
        });

        function confirmDeactivate() {
            customConfirm('Are you sure you want to deactivate your account? You can reactivate it anytime by logging in again.', function() {
                showModal('Account deactivation feature will be available soon.', { type: 'info' });
            });
        }

        function confirmDelete() {
            customConfirm('⚠️ WARNING: This will permanently delete your account and all associated data. This action cannot be undone. Are you absolutely sure?', function() {
                const confirmation = prompt('Type "DELETE" to confirm:');
                if (confirmation === 'DELETE') {
                    showModal('Account deletion feature will be available soon.', { type: 'info' });
                }
            });
        }

        // Theme selection
        document.querySelectorAll('.theme-card').forEach(card => {
            card.addEventListener('click', function() {
                document.querySelectorAll('.theme-card').forEach(c => c.classList.remove('active'));
                this.classList.add('active');
                saveSettings();
            });
        });
    </script>

    <script src="/js/home.js"></script>
</body>
</html>
