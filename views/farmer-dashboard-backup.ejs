<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farmer Portal | ‡§ï‡•É‡§∑‡•Ä-‡§∏‡•á‡§§‡•Ç</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Hind:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #e8f5e9 100%);
        }
        .brand-title {
            font-family: 'Hind', 'Noto Sans Devanagari', sans-serif;
        }
        .stat-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.15);
        }
        .nav-item {
            transition: all 0.2s ease;
        }
        .nav-item:hover {
            transform: translateX(4px);
        }
        .nav-item.active {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }
    </style>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#10b981',
                        secondary: '#f59e0b',
                        earth: '#8b4513',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gradient-to-br from-gray-50 to-green-50">

    <!-- Sidebar -->
    <div id="sidebar" class="fixed left-0 top-0 h-full w-64 bg-white shadow-2xl z-50 transform -translate-x-full lg:translate-x-0 transition-transform duration-300">
        <div class="p-6 border-b bg-gradient-to-r from-primary to-green-600">
            <h1 class="text-2xl font-bold text-white brand-title">‡§ï‡•É‡§∑‡•Ä-‡§∏‡•á‡§§‡•Ç</h1>
            <p class="text-xs text-green-100 mt-1 uppercase tracking-wide">Farmer Portal</p>
        </div>
        
        <nav class="p-4 space-y-1 overflow-y-auto h-[calc(100vh-120px)]">
            <a href="javascript:void(0);" onclick="showSection('dashboard'); return false;" class="nav-item flex items-center px-4 py-3 text-white bg-primary rounded-lg nav-link active" data-section="dashboard">
                <i class="fas fa-home mr-3 text-lg"></i>
                <span class="font-medium">Dashboard</span>
            </a>
            <a href="javascript:void(0);" onclick="showSection('notifications'); return false;" class="nav-item flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-lg transition nav-link" data-section="notifications">
                <i class="fas fa-bell mr-3 text-lg text-yellow-600"></i>
                <span class="font-medium">Notifications</span>
                <span class="ml-auto bg-red-500 text-white text-xs px-2 py-0.5 rounded-full" id="notifBadge">3</span>
            </a>
            <a href="javascript:void(0);" onclick="showSection('addProduct'); return false;" class="nav-item flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-lg transition nav-link" data-section="addProduct">
                <i class="fas fa-plus-circle mr-3 text-lg text-green-600"></i>
                <span class="font-medium">Add Product</span>
            </a>
            <a href="javascript:void(0);" onclick="showSection('myProducts'); return false;" class="nav-item flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-lg transition nav-link" data-section="myProducts">
                <i class="fas fa-box mr-3 text-lg text-blue-600"></i>
                <span class="font-medium">My Products</span>
            </a>
            <a href="javascript:void(0);" onclick="showSection('orders'); return false;" class="nav-item flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-lg transition nav-link" data-section="orders">
                <i class="fas fa-truck mr-3 text-lg text-purple-600"></i>
                <span class="font-medium">Orders</span>
            </a>
            <a href="/profile" class="nav-item flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-lg transition">
                <i class="fas fa-user mr-3 text-lg text-gray-600"></i>
                <span class="font-medium">Profile</span>
            </a>
            <a href="/logout" class="nav-item flex items-center px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg transition">
                <i class="fas fa-right-from-bracket mr-3 text-lg"></i>
                <span class="font-medium">Logout</span>
            </a>
        </nav>
    </div>

    <!-- Mobile Menu Button -->
    <button onclick="toggleSidebar()" class="lg:hidden fixed top-4 left-4 z-50 p-3 bg-primary text-white rounded-lg shadow-lg hover:bg-green-700">
        <i class="fas fa-bars text-xl"></i>
    </button>

    <!-- Main Content -->
    <div class="lg:ml-64 min-h-screen">
        <!-- Header -->
        <header class="bg-white shadow-sm sticky top-0 z-40 border-b">
            <div class="px-4 lg:px-8 py-5 flex items-center justify-between">
                <div>
                    <h2 class="text-2xl lg:text-3xl font-bold text-gray-800">
                        Welcome, <%= user.name %>! <i class="fas fa-seedling text-primary"></i>
                    </h2>
                    <p class="text-sm text-gray-600 mt-1">Manage your farm products easily</p>
                </div>
                <div class="flex items-center space-x-3">
                    <div class="hidden sm:flex items-center space-x-2 bg-green-50 px-4 py-2 rounded-lg">
                        <img src="https://ui-avatars.com/api/?name=<%= user.name %>&background=10b981&color=fff" class="w-10 h-10 rounded-full border-2 border-primary">
                        <div class="hidden md:block">
                            <p class="font-semibold text-gray-800 text-sm"><%= user.name %></p>
                            <p class="text-xs text-green-600">Farmer</p>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Dashboard Content -->
        <main class="p-4 lg:p-8">
            
            <!-- Dashboard Overview -->
            <div id="dashboard" style="display: block;" class="space-y-6">
                <!-- Quick Stats -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6">
                    <div class="stat-card bg-white rounded-xl shadow-md p-6 border-l-4 border-primary">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-600 text-sm font-medium">My Products</p>
                                <h3 class="text-3xl font-bold text-gray-800 mt-2" id="totalProducts">0</h3>
                                <p class="text-green-600 text-xs mt-1"><i class="fas fa-box"></i> Total listed</p>
                            </div>
                            <div class="w-14 h-14 bg-primary bg-opacity-10 rounded-full flex items-center justify-center">
                                <i class="fas fa-box text-primary text-2xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="stat-card bg-white rounded-xl shadow-md p-6 border-l-4 border-blue-500">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-600 text-sm font-medium">Active Products</p>
                                <h3 class="text-3xl font-bold text-gray-800 mt-2" id="activeProducts">0</h3>
                                <p class="text-blue-600 text-xs mt-1"><i class="fas fa-check-circle"></i> In stock</p>
                            </div>
                            <div class="w-14 h-14 bg-blue-500 bg-opacity-10 rounded-full flex items-center justify-center">
                                <i class="fas fa-check-circle text-blue-500 text-2xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="stat-card bg-white rounded-xl shadow-md p-6 border-l-4 border-orange-500">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-600 text-sm font-medium">Low Stock</p>
                                <h3 class="text-3xl font-bold text-gray-800 mt-2" id="lowStockProducts">0</h3>
                                <p class="text-orange-600 text-xs mt-1"><i class="fas fa-exclamation-triangle"></i> Need attention</p>
                            </div>
                            <div class="w-14 h-14 bg-orange-500 bg-opacity-10 rounded-full flex items-center justify-center">
                                <i class="fas fa-exclamation-triangle text-orange-500 text-2xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="stat-card bg-white rounded-xl shadow-md p-6 border-l-4 border-purple-500">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-600 text-sm font-medium">Total Orders</p>
                                <h3 class="text-3xl font-bold text-gray-800 mt-2">0</h3>
                                <p class="text-purple-600 text-xs mt-1"><i class="fas fa-truck"></i> Coming soon</p>
                            </div>
                            <div class="w-14 h-14 bg-purple-500 bg-opacity-10 rounded-full flex items-center justify-center">
                                <i class="fas fa-truck text-purple-500 text-2xl"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-white rounded-xl shadow-md p-6">
                    <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-bolt text-secondary mr-2"></i> Quick Actions
                    </h3>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                        <button onclick="showSection('addProduct')" class="flex items-center justify-center p-4 bg-gradient-to-r from-primary to-green-600 text-white rounded-lg hover:shadow-lg transition transform hover:scale-105">
                            <i class="fas fa-plus-circle mr-2"></i>
                            <span class="font-semibold">Add New Product</span>
                        </button>
                        <button onclick="showSection('myProducts')" class="flex items-center justify-center p-4 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-lg hover:shadow-lg transition transform hover:scale-105">
                            <i class="fas fa-box mr-2"></i>
                            <span class="font-semibold">View My Products</span>
                        </button>
                        <button onclick="showSection('orders')" class="flex items-center justify-center p-4 bg-gradient-to-r from-purple-500 to-purple-600 text-white rounded-lg hover:shadow-lg transition transform hover:scale-105">
                            <i class="fas fa-truck mr-2"></i>
                            <span class="font-semibold">Check Orders</span>
                        </button>
                    </div>
                </div>

                <!-- Getting Started Guide -->
                <div class="bg-gradient-to-r from-green-50 to-blue-50 rounded-xl shadow-md p-6 border border-green-200">
                    <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-lightbulb text-yellow-500 mr-2"></i> Getting Started
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="flex items-start space-x-3">
                            <div class="w-10 h-10 bg-primary text-white rounded-full flex items-center justify-center font-bold flex-shrink-0">1</div>
                            <div>
                                <p class="font-semibold text-gray-800">Add Your Products</p>
                                <p class="text-sm text-gray-600">List your farm products with photos and prices</p>
                            </div>
                        </div>
                        <div class="flex items-start space-x-3">
                            <div class="w-10 h-10 bg-blue-500 text-white rounded-full flex items-center justify-center font-bold flex-shrink-0">2</div>
                            <div>
                                <p class="font-semibold text-gray-800">Manage Stock</p>
                                <p class="text-sm text-gray-600">Keep your inventory updated regularly</p>
                            </div>
                        </div>
                        <div class="flex items-start space-x-3">
                            <div class="w-10 h-10 bg-purple-500 text-white rounded-full flex items-center justify-center font-bold flex-shrink-0">3</div>
                            <div>
                                <p class="font-semibold text-gray-800">Fulfill Orders</p>
                                <p class="text-sm text-gray-600">Deliver fresh products to customers</p>
                            </div>
                        </div>
                    </div>
            </div>

            <!-- Notifications Section -->
            <div id="notifications" style="display: none;">
                <div class="bg-white rounded-xl shadow-md p-6 lg:p-8">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-2xl font-bold text-gray-800 flex items-center">
                            <i class="fas fa-bell text-yellow-500 mr-3 text-3xl"></i> Notifications
                        </h3>
                        <button onclick="markAllAsRead()" class="text-sm text-blue-600 hover:text-blue-800 font-semibold">
                            <i class="fas fa-check-double mr-1"></i> Mark all as read
                        </button>
                    </div>
                    
                    <div class="space-y-3" id="notificationsList">
                        <!-- Product Added Notification -->
                        <div class="notification-item flex items-start p-4 bg-green-50 rounded-lg border-l-4 border-green-500 hover:shadow-md transition">
                            <i class="fas fa-check-circle text-3xl text-green-500 mr-4 mt-1"></i>
                            <div class="flex-1">
                                <p class="text-sm font-semibold text-gray-800">Product Added Successfully!</p>
                                <p class="text-xs text-gray-600 mt-1">Your product has been listed and is now visible to customers.</p>
                                <p class="text-xs text-green-600 mt-2">
                                    <i class="fas fa-clock mr-1"></i> Just now
                                </p>
                            </div>
                            <button onclick="this.parentElement.remove(); updateNotifCount();" class="text-gray-400 hover:text-gray-600">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>

                        <!-- Low Stock Warning -->
                        <div class="notification-item flex items-start p-4 bg-orange-50 rounded-lg border-l-4 border-orange-500 hover:shadow-md transition">
                            <i class="fas fa-exclamation-triangle text-3xl text-orange-500 mr-4 mt-1"></i>
                            <div class="flex-1">
                                <p class="text-sm font-semibold text-gray-800">Low Stock Alert!</p>
                                <p class="text-xs text-gray-600 mt-1">Some of your products are running low on stock. Update inventory to continue selling.</p>
                                <button onclick="showSection('myProducts')" class="text-xs text-orange-600 hover:text-orange-800 font-semibold mt-2">
                                    <i class="fas fa-arrow-right mr-1"></i> View Products
                                </button>
                                <p class="text-xs text-orange-600 mt-2">
                                    <i class="fas fa-clock mr-1"></i> 2 hours ago
                                </p>
                            </div>
                            <button onclick="this.parentElement.remove(); updateNotifCount();" class="text-gray-400 hover:text-gray-600">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>

                        <!-- System Update -->
                        <div class="notification-item flex items-start p-4 bg-blue-50 rounded-lg border-l-4 border-blue-500 hover:shadow-md transition">
                            <i class="fas fa-info-circle text-3xl text-blue-500 mr-4 mt-1"></i>
                            <div class="flex-1">
                                <p class="text-sm font-semibold text-gray-800">Welcome to Krishi-Setu!</p>
                                <p class="text-xs text-gray-600 mt-1">Start listing your farm products to reach more customers directly.</p>
                                <p class="text-xs text-blue-600 mt-2">
                                    <i class="fas fa-clock mr-1"></i> 1 day ago
                                </p>
                            </div>
                            <button onclick="this.parentElement.remove(); updateNotifCount();" class="text-gray-400 hover:text-gray-600">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Empty State (initially hidden) -->
                    <div id="emptyNotifications" class="hidden text-center py-16">
                        <i class="fas fa-bell-slash text-6xl text-gray-300 mb-4"></i>
                        <p class="text-xl text-gray-600 font-semibold">No Notifications</p>
                        <p class="text-gray-500 mt-2">You're all caught up!</p>
                    </div>
                </div>
            </div>

            <!-- Add Product Section -->
            <div id="addProduct" style="display: none;">
                <div class="bg-white rounded-xl shadow-md p-6 lg:p-8">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-2xl font-bold text-gray-800 flex items-center">
                            <i class="fas fa-plus-circle text-primary mr-3"></i> Add New Product
                        </h3>
                        <button onclick="showSection('dashboard')" class="text-gray-600 hover:text-gray-800">
                            <i class="fas fa-times text-xl"></i>
                        </button>
                    </div>
                    <div id="addProductMessage" class="mb-4 hidden"></div>
                    <form id="addProductForm" class="grid grid-cols-1 md:grid-cols-2 gap-6" enctype="multipart/form-data">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-tag text-primary mr-1"></i> Product Name *
                            </label>
                            <input type="text" id="productName" name="productName" placeholder="e.g., Fresh Tomatoes" required 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-list text-primary mr-1"></i> Category *
                            </label>
                            <select id="category" name="category" required 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition">
                                <option value="">Select Category</option>
                                <option value="vegetables">ü•¨ Vegetables</option>
                                <option value="fruits">üçé Fruits</option>
                                <option value="grains">üåæ Grains & Cereals</option>
                                <option value="dairy">ü•õ Dairy Products</option>
                                <option value="pulses">ü´ò Pulses</option>
                                <option value="pickles">ü•í Pickles</option>
                                <option value="masala">üå∂Ô∏è Masala Blends</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-rupee-sign text-primary mr-1"></i> Original Price (‚Çπ) *
                            </label>
                            <input type="number" id="originalPrice" name="originalPrice" placeholder="100" min="0" step="0.01" required 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-tags text-primary mr-1"></i> Selling Price (‚Çπ) *
                            </label>
                            <input type="number" id="price" name="price" placeholder="80" min="0" step="0.01" required 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition">
                            <p class="text-xs text-gray-500 mt-1">Discount will be calculated automatically</p>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-boxes-stacked text-primary mr-1"></i> Available Stock *
                            </label>
                            <input type="number" id="stock" name="stock" placeholder="100" min="0" required 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-weight text-primary mr-1"></i> Unit *
                            </label>
                            <select id="unit" name="unit" required 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition">
                                <option value="kg">Kilogram (kg)</option>
                                <option value="liter">Liter (L)</option>
                                <option value="gram">Gram (g)</option>
                                <option value="100g">100 Grams</option>
                                <option value="piece">Piece</option>
                            </select>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-image text-primary mr-1"></i> Product Image *
                            </label>
                            <input type="file" id="productImage" name="productImage" accept="image/*" required 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-primary file:text-white hover:file:bg-green-700">
                            <p class="text-xs text-gray-500 mt-2">
                                <i class="fas fa-info-circle"></i> Accepted: JPG, PNG, GIF, WEBP, AVIF (Max 5MB)
                            </p>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-align-left text-primary mr-1"></i> Description
                            </label>
                            <textarea id="description" name="description" rows="4" placeholder="Describe your product quality, freshness, organic nature, etc..." 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition"></textarea>
                        </div>
                        <div class="md:col-span-2 flex gap-4">
                            <button type="submit" id="submitBtn" 
                                class="flex-1 bg-gradient-to-r from-primary to-green-600 text-white py-4 rounded-lg font-bold hover:shadow-lg transition transform hover:scale-105">
                                <i class="fas fa-plus-circle mr-2"></i>Add Product
                            </button>
                            <button type="button" onclick="document.getElementById('addProductForm').reset()" 
                                class="px-8 py-4 bg-gray-200 text-gray-700 rounded-lg font-semibold hover:bg-gray-300 transition">
                                <i class="fas fa-redo mr-2"></i>Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- My Products Section -->
            <div id="myProducts" style="display: none;">
                <div class="bg-white rounded-xl shadow-md overflow-hidden">
                    <div class="p-6 border-b flex items-center justify-between bg-gradient-to-r from-blue-50 to-indigo-50">
                        <h3 class="text-2xl font-bold text-gray-800 flex items-center">
                            <i class="fas fa-box text-blue-600 mr-3"></i> My Products
                        </h3>
                        <button onclick="showSection('addProduct')" class="px-6 py-3 bg-gradient-to-r from-primary to-green-600 text-white rounded-lg hover:shadow-lg transition transform hover:scale-105 font-semibold">
                            <i class="fas fa-plus-circle mr-2"></i> Add New
                        </button>
                    </div>
                    <div id="productsLoading" class="p-12 text-center">
                        <i class="fas fa-spinner fa-spin text-5xl text-primary mb-4"></i>
                        <p class="text-gray-600 text-lg">Loading your products...</p>
                    </div>
                    <div id="productsContainer" class="hidden overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
                                <tr>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Product</th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Category</th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Price</th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Stock</th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200" id="productsTableBody">
                                <!-- Products will be dynamically inserted here -->
                            </tbody>
                        </table>
                    </div>
                    <div id="productsEmpty" class="hidden p-16 text-center">
                        <i class="fas fa-box-open text-8xl text-gray-300 mb-6"></i>
                        <p class="text-2xl font-semibold text-gray-700 mb-3">No products yet</p>
                        <p class="text-gray-500 mb-8 text-lg">Start by adding your first farm product and grow your business!</p>
                        <button onclick="showSection('addProduct')" class="px-10 py-4 bg-gradient-to-r from-primary to-green-600 text-white rounded-lg hover:shadow-lg transition transform hover:scale-105 font-bold text-lg">
                            <i class="fas fa-plus-circle mr-2"></i> Add Your First Product
                        </button>
                    </div>
                </div>
            </div>

            <!-- Orders Section -->
            <div id="orders" style="display: none;">
                <div class="bg-white rounded-xl shadow-md p-6 lg:p-10">
                    <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
                        <i class="fas fa-truck text-purple-600 mr-3 text-3xl"></i> Orders Management
                    </h3>
                    <div class="bg-gradient-to-r from-purple-50 to-blue-50 border-2 border-purple-200 rounded-2xl p-12 text-center">
                        <i class="fas fa-truck-fast text-8xl text-purple-500 mb-6"></i>
                        <h4 class="text-2xl font-bold text-gray-800 mb-3">Orders Feature Coming Soon!</h4>
                        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                            You'll be able to view and manage customer orders, track deliveries, and update order statuses here. Stay tuned!
                        </p>
                    </div>
                </div>
            </div>

            <!-- Earnings Section (Removed duplicate) -->
            
        </main>
    </div>

    <script>
        // Toggle Sidebar (Mobile)
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('-translate-x-full');
        }

        // Show Section
        function showSection(sectionId) {
            console.log('showSection called with:', sectionId);
            
            // Hide all sections
            ['dashboard', 'notifications', 'addProduct', 'myProducts', 'orders'].forEach(id => {
                const element = document.getElementById(id);
                if (element) {
                    element.style.display = 'none';
                    console.log('Hiding section:', id);
                } else {
                    console.log('Section not found:', id);
                }
            });
            
            // Show selected section
            const section = document.getElementById(sectionId);
            if (section) {
                section.style.display = 'block';
                console.log('Showing section:', sectionId);
            } else {
                console.log('ERROR: Section not found:', sectionId);
            }
            
            // Update active nav link
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('text-white', 'bg-primary', 'active');
                link.classList.add('text-gray-700', 'hover:bg-gray-100');
            });
            const activeLink = document.querySelector(`[data-section="${sectionId}"]`);
            if (activeLink) {
                activeLink.classList.remove('text-gray-700', 'hover:bg-gray-100');
                activeLink.classList.add('text-white', 'bg-primary', 'active');
            }
            
            // Load data for specific sections
            if (sectionId === 'myProducts') loadProducts();
            if (sectionId === 'dashboard') loadDashboardStats();
            
            // Close mobile sidebar
            if (window.innerWidth < 1024) {
                document.getElementById('sidebar').classList.add('-translate-x-full');
            }
        }

        // Load Dashboard Stats
        function loadDashboardStats() {
            fetch('/api/products/farmer')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const products = data.products || [];
                        const totalProducts = products.length;
                        const activeProducts = products.filter(p => p.status === 'active').length;
                        const lowStockProducts = products.filter(p => p.stock < 50).length;
                        
                        document.getElementById('totalProducts').textContent = totalProducts;
                        document.getElementById('activeProducts').textContent = activeProducts;
                        document.getElementById('lowStockProducts').textContent = lowStockProducts;
                    }
                })
                .catch(error => console.error('Error loading stats:', error));
        }

        // Load Products
        function loadProducts() {
            const loadingDiv = document.getElementById('productsLoading');
            const containerDiv = document.getElementById('productsContainer');
            const emptyDiv = document.getElementById('productsEmpty');
            const tbody = document.getElementById('productsTableBody');
            
            loadingDiv.classList.remove('hidden');
            containerDiv.classList.add('hidden');
            emptyDiv.classList.add('hidden');
            
            fetch('/api/products/farmer')
                .then(response => response.json())
                .then(data => {
                    loadingDiv.classList.add('hidden');
                    
                    if (data.success && data.products && data.products.length > 0) {
                        containerDiv.classList.remove('hidden');
                        tbody.innerHTML = data.products.map(product => `
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <img src="${product.image}" alt="${product.name}" class="w-16 h-16 rounded-xl object-cover mr-4 border-2 border-gray-200">
                                        <span class="font-semibold text-gray-900">${product.name}</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-lg text-sm font-medium capitalize">
                                        ${product.category}
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="font-bold text-gray-900">‚Çπ${product.price}</div>
                                    <div class="text-xs text-gray-500">per ${product.unit}</div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="font-semibold ${product.stock < 50 ? 'text-orange-600' : 'text-gray-900'}">
                                        ${product.stock} ${product.unit}
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="px-4 py-2 text-xs font-bold rounded-lg ${
                                        product.status === 'active' ? 'bg-green-100 text-green-800' : 
                                        product.status === 'out_of_stock' ? 'bg-red-100 text-red-800' :
                                        'bg-gray-100 text-gray-800'
                                    }">
                                        ${product.status === 'active' ? '‚úì Active' : product.status === 'out_of_stock' ? '‚úó Out of Stock' : 'Inactive'}
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <button onclick="confirmDeleteProduct('${product._id}', '${product.name}')" 
                                        class="px-4 py-2 bg-red-100 text-red-600 hover:bg-red-600 hover:text-white rounded-lg transition font-semibold">
                                        <i class="fas fa-trash mr-1"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        `).join('');
                    } else {
                        emptyDiv.classList.remove('hidden');
                    }
                })
                .catch(error => {
                    loadingDiv.classList.add('hidden');
                    emptyDiv.classList.remove('hidden');
                    console.error('Error loading products:', error);
                });
        }

        function confirmDeleteProduct(productId, productName) {
            if (!confirm(`Are you sure you want to delete "${productName}"?\n\nThis action cannot be undone.`)) return;
            
            const tbody = document.getElementById('productsTableBody');
            tbody.innerHTML = '<tr><td colspan="6" class="text-center py-8"><i class="fas fa-spinner fa-spin text-3xl text-primary"></i></td></tr>';
            
            fetch(`/api/products/delete/${productId}`, { method: 'DELETE' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        loadProducts();
                        loadDashboardStats();
                        showNotification('Product deleted successfully!', 'success');
                    } else {
                        showNotification('Failed to delete product: ' + data.message, 'error');
                        loadProducts();
                    }
                })
                .catch(() => {
                    showNotification('Failed to delete product', 'error');
                    loadProducts();
                });
        }

        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `fixed top-24 right-8 z-50 px-6 py-4 rounded-lg shadow-2xl transform transition-all duration-300 ${
                type === 'success' ? 'bg-green-500 text-white' : 
                type === 'error' ? 'bg-red-500 text-white' : 
                'bg-blue-500 text-white'
            }`;
            notification.innerHTML = `
                <div class="flex items-center space-x-3">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'} text-2xl"></i>
                    <span class="font-semibold">${message}</span>
                </div>
            `;
            document.body.appendChild(notification);
            setTimeout(() => {
                notification.style.transform = 'translateX(400px)';
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        // Initialize on load
        document.addEventListener('DOMContentLoaded', () => {
            console.log('DOM Content Loaded - Initializing farmer dashboard');
            
            // Show dashboard by default
            showSection('dashboard');

            // Add Product Form Handler
            const addProductForm = document.getElementById('addProductForm');
            if (addProductForm) {
                console.log('Add Product Form found');
                addProductForm.addEventListener('submit', async (e) => {
                    e.preventDefault();
                    
                    const submitBtn = document.getElementById('submitBtn');
                    const messageDiv = document.getElementById('addProductMessage');
                    
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Adding Product...';
                    
                    const formData = new FormData(addProductForm);
                    
                    try {
                        const response = await fetch('/api/products/add', {
                            method: 'POST',
                            body: formData
                        });
                        
                        const data = await response.json();
                        
                        if (data.success) {
                            messageDiv.className = 'mb-4 p-5 bg-green-100 border-2 border-green-400 text-green-800 rounded-xl font-semibold';
                            messageDiv.innerHTML = '<i class="fas fa-check-circle mr-2 text-xl"></i>' + data.message;
                            messageDiv.classList.remove('hidden');
                            addProductForm.reset();
                            showNotification('Product added successfully!', 'success');
                            
                            // Add notification
                            addNotification('success', 'Product Listed!', `${formData.get('productName')} is now live and visible to customers.`);
                            
                            setTimeout(() => {
                                messageDiv.classList.add('hidden');
                                showSection('myProducts');
                            }, 2000);
                        } else {
                            messageDiv.className = 'mb-4 p-5 bg-red-100 border-2 border-red-400 text-red-800 rounded-xl font-semibold';
                            messageDiv.innerHTML = '<i class="fas fa-exclamation-triangle mr-2 text-xl"></i>' + data.message;
                            messageDiv.classList.remove('hidden');
                            showNotification('Failed to add product', 'error');
                        }
                    } catch (error) {
                        messageDiv.className = 'mb-4 p-5 bg-red-100 border-2 border-red-400 text-red-800 rounded-xl font-semibold';
                        messageDiv.innerHTML = '<i class="fas fa-exclamation-triangle mr-2 text-xl"></i>Failed to add product. Please try again.';
                        messageDiv.classList.remove('hidden');
                        showNotification('Failed to add product', 'error');
                    } finally {
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = '<i class="fas fa-plus-circle mr-2"></i>Add Product';
                    }
                });
            }
            
            // Initialize notification count
            updateNotifCount();
        });

        // Notification Management Functions
        function updateNotifCount() {
            const notifItems = document.querySelectorAll('#notificationsList .notification-item');
            const count = notifItems.length;
            const badge = document.getElementById('notifBadge');
            
            if (count > 0) {
                badge.textContent = count;
                badge.style.display = 'flex';
            } else {
                badge.style.display = 'none';
                const notifsList = document.getElementById('notificationsList');
                const emptyState = document.getElementById('emptyNotifications');
                if (notifsList) notifsList.classList.add('hidden');
                if (emptyState) emptyState.classList.remove('hidden');
            }
        }

        function markAllAsRead() {
            const notifsList = document.getElementById('notificationsList');
            if (notifsList) {
                notifsList.innerHTML = '';
                updateNotifCount();
                showNotification('All notifications cleared', 'success');
            }
        }

        function addNotification(type, title, message) {
            const notifsList = document.getElementById('notificationsList');
            const emptyState = document.getElementById('emptyNotifications');
            
            if (!notifsList) return;
            
            if (emptyState) emptyState.classList.add('hidden');
            notifsList.classList.remove('hidden');
            
            const colors = {
                success: { bg: 'green', icon: 'check-circle' },
                warning: { bg: 'orange', icon: 'exclamation-triangle' },
                info: { bg: 'blue', icon: 'info-circle' },
                error: { bg: 'red', icon: 'times-circle' }
            };
            
            const color = colors[type] || colors.info;
            
            const notifHTML = `
                <div class="notification-item flex items-start p-4 bg-${color.bg}-50 rounded-lg border-l-4 border-${color.bg}-500 hover:shadow-md transition">
                    <i class="fas fa-${color.icon} text-3xl text-${color.bg}-500 mr-4 mt-1"></i>
                    <div class="flex-1">
                        <p class="text-sm font-semibold text-gray-800">${title}</p>
                        <p class="text-xs text-gray-600 mt-1">${message}</p>
                        <p class="text-xs text-${color.bg}-600 mt-2">
                            <i class="fas fa-clock mr-1"></i> Just now
                        </p>
                    </div>
                    <button onclick="this.parentElement.remove(); updateNotifCount();" class="text-gray-400 hover:text-gray-600">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;
            
            notifsList.insertAdjacentHTML('afterbegin', notifHTML);
            updateNotifCount();
        }
    </script>

</body>
</html>
