    <script>
        // Reviews Carousel
        let currentReviewSlide = 0;
        const reviewsTrack = document.getElementById('reviewsTrack');
        const reviewCards = document.querySelectorAll('.review-card');
        const totalReviews = reviewCards.length;
        let cardsPerView = 3;
        
        function updateCardsPerView() {
            if (window.innerWidth > 1200) {
                cardsPerView = 3;
            } else if (window.innerWidth > 768) {
                cardsPerView = 2;
            } else {
                cardsPerView = 1;
            }
        }
        
        function slideReviews(direction) {
            currentReviewSlide += direction;
            const maxSlide = totalReviews - cardsPerView;
            
            if (currentReviewSlide > maxSlide) {
                currentReviewSlide = 0;
            } else if (currentReviewSlide < 0) {
                currentReviewSlide = maxSlide;
            }
            
            updateReviewsCarousel();
        }
        
        function updateReviewsCarousel() {
            const cardWidth = reviewCards[0].offsetWidth;
            const gap = 30;
            const offset = -(currentReviewSlide * (cardWidth + gap));
            reviewsTrack.style.transform = `translateX(${offset}px)`;
            updateCarouselDots();
        }
        
        function createCarouselDots() {
            const dotsContainer = document.getElementById('carouselDots');
            dotsContainer.innerHTML = '';
            const maxSlide = totalReviews - cardsPerView;
            
            for (let i = 0; i <= maxSlide; i++) {
                const dot = document.createElement('span');
                dot.classList.add('carousel-dot');
                if (i === currentReviewSlide) dot.classList.add('active');
                dot.onclick = () => {
                    currentReviewSlide = i;
                    updateReviewsCarousel();
                };
                dotsContainer.appendChild(dot);
            }
        }
        
        function updateCarouselDots() {
            const dots = document.querySelectorAll('.carousel-dot');
            dots.forEach((dot, index) => {
                dot.classList.toggle('active', index === currentReviewSlide);
            });
        }
        
        window.addEventListener('resize', () => {
            updateCardsPerView();
            createCarouselDots();
            updateReviewsCarousel();
        });
        
        updateCardsPerView();
        createCarouselDots();
        
        // Auto-slide every 4 seconds
        setInterval(() => {
            slideReviews(1);
        }, 4000);
    </script>
