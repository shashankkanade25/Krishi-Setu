<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart - KRISHI-SETU</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Devanagari:wght@400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/cart.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="cart-page">
        <div class="cart-container">
            <h1 class="cart-title">Shopping Cart</h1>
            
            <% if (cart.length === 0) { %>
                <div class="empty-cart">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/>
                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                    </svg>
                    <h2>Your cart is empty</h2>
                    <p>Start shopping to add items to your cart!</p>
                    <a href="/products?category=all" class="continue-shopping-btn">Browse Products</a>
                </div>
            <% } else { %>
                <div class="cart-content">
                    <div class="cart-items">
                        <% 
                        let subtotal = 0;
                        cart.forEach(item => {
                            subtotal += item.price * item.quantity;
                        });
                        %>
                        
                        <% cart.forEach((item, index) => { %>
                            <div class="cart-item" data-product="<%= item.productName %>">
                                <img src="<%= item.image %>" alt="<%= item.productName %>" class="cart-item-img">
                                <div class="cart-item-details">
                                    <h3 class="cart-item-name"><%= item.productName %></h3>
                                    <p class="cart-item-weight"><%= item.weight %></p>
                                    <span class="cart-item-category"><%= item.category %></span>
                                </div>
                                <div class="cart-item-quantity">
                                    <button class="qty-btn minus" onclick="updateQuantity('<%= item.productName %>', <%= item.quantity - 1 %>)">−</button>
                                    <input type="number" class="qty-input" value="<%= item.quantity %>" min="1" readonly>
                                    <button class="qty-btn plus" onclick="updateQuantity('<%= item.productName %>', <%= item.quantity + 1 %>)">+</button>
                                </div>
                                <div class="cart-item-price">
                                    <span class="item-total">₹<%= (item.price * item.quantity).toFixed(2) %></span>
                                    <span class="item-unit-price">₹<%= item.price %> each</span>
                                </div>
                                <button class="remove-btn" onclick="removeItem('<%= item.productName %>')">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                    </svg>
                                </button>
                            </div>
                        <% }); %>
                    </div>

                    <div class="cart-summary">
                        <h2>Order Summary</h2>
                        <div class="summary-row">
                            <span>Subtotal (<%= cart.reduce((sum, item) => sum + item.quantity, 0) %> items)</span>
                            <span>₹<%= subtotal.toFixed(2) %></span>
                        </div>
                        <div class="summary-row">
                            <span>Delivery Charges</span>
                            <span class="delivery-free">FREE</span>
                        </div>
                        <div class="summary-divider"></div>
                        <div class="summary-row total">
                            <span>Total Amount</span>
                            <span>₹<%= subtotal.toFixed(2) %></span>
                        </div>
                        <button class="checkout-btn">Proceed to Checkout</button>
                        <a href="/products?category=all" class="continue-link">Continue Shopping</a>
                        
                        <div class="cart-benefits">
                            <div class="benefit-item">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 7h-4V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v3H4a2 2 0 0 0-2 2v11a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/><path d="M10 12h4"/><path d="M12 10v4"/>
                                </svg>
                                <span>Direct from Farmers</span>
                            </div>
                            <div class="benefit-item">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"/><path d="M15 18H9"/><path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"/><circle cx="17" cy="18" r="2"/><circle cx="7" cy="18" r="2"/>
                                </svg>
                                <span>Fast Delivery</span>
                            </div>
                            <div class="benefit-item">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <polyline points="20 6 9 17 4 12"/>
                                </svg>
                                <span>Fresh & Quality Assured</span>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script src="/js/cart.js"></script>
</body>
</html>
