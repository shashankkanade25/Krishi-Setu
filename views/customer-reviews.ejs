    <link rel="stylesheet" href="/css/landing.css">
    <style>
        .reviews-page {
            padding: 100px 0 80px;
            background-color: #f5f5dc;
            min-height: 100vh;
        }
        
        .reviews-header {
            text-align: center;
            margin-bottom: 60px;
        }
        
        .reviews-header h1 {
            font-size: 48px;
            color: #2c5f2d;
            margin-bottom: 15px;
            font-weight: 900;
        }
        
        .reviews-header p {
            font-size: 20px;
            color: #666;
        }
        
        .reviews-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        .reviews-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin-bottom: 60px;
        }
        
        .stat-box {
            background: white;
            padding: 30px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
        }
        
        .stat-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }
        
        .stat-box i {
            font-size: 40px;
            color: #8bc34a;
            margin-bottom: 15px;
        }
        
        .stat-box h3 {
            font-size: 36px;
            color: #2c5f2d;
            margin-bottom: 8px;
        }
        
        .stat-box p {
            font-size: 16px;
            color: #666;
        }
        
        .all-reviews-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
        }
        
        /* Use same review card style as landing page */
        .all-reviews-grid .review {
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        
        .all-reviews-grid .review:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.12);
        }
        
        .review-header {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .review-header .review-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #e8f5e9;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }
        
        .rating {
            color: #ffa726;
            font-size: 14px;
            display: flex;
            gap: 3px;
        }
        
        .review-content {
            flex: 1;
        }
        
        .review-content p:first-child {
            font-size: 14px;
            color: #666;
            line-height: 1.6;
            margin-bottom: 12px;
            font-style: italic;
        }
        
        .review-content .review-author {
            font-size: 15px;
            color: #333;
            font-weight: 700;
            margin: 0;
        }
        
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            color: #2c5f2d;
            text-decoration: none;
            font-weight: 600;
            margin-bottom: 30px;
            transition: all 0.3s ease;
        }
        
        .back-link:hover {
            color: #8bc34a;
            transform: translateX(-5px);
        }
    </style>
</head>
